{
  "name": "@rafonzoo/ui",
  "version": "1.0.0",
  "description": "A UI component library for Next.js applications.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:ts": "tsup src/index.ts --format cjs,esm --dts --external next,react,react-dom",
    "build:css": "pnpm dlx @tailwindcss/cli --input src/globals.css --output dist/globals.css --minify",
    "build": "npm run clean && npm run build:css && npm run build:ts",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "dist/globals.css"
  ],
  "keywords": [
    "react",
    "nextjs",
    "ui-kit",
    "library",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.15",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "tailwindcss": "^4.1.15",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
