{
  "name": "@rafonzoo/ui",
  "version": "0.0.5",
  "description": "A UI component library for Next.js applications.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:ts": "tsup src/index.ts --format cjs,esm --dts --external next,react,react-dom",
    "build:css": "pnpm dlx @tailwindcss/cli --input src/globals.css --output dist/globals.css --minify",
    "build": "pnpm version patch && pnpm run clean && pnpm run build:css && pnpm run build:ts",
    "format": "npx prettier \"src/**/*.{ts,tsx}\" --write --log-level silent && npx eslint ./src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "dist/globals.css"
  ],
  "keywords": [
    "react",
    "nextjs",
    "ui-kit",
    "library",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "next-themes": ">=0.4.6",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "next-themes": "^0.4.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/cli": "^4.1.15",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.6",
    "eslint-plugin-import": "^2.32.0",
    "npm-check-updates": "^19.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.15",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
